   version="3.0">
   <display-name>MyMusicStore 3</display-name>
   <welcome-file-list>
      <welcome-file>index.jsp</welcome-file>
   </welcome-file-list>

   <security-constraint>
      <web-resource-collection>
         <web-resource-name>MyMusicStore</web-resource-name>
